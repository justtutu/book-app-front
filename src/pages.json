{
  "globalStyle": {
    "navigationStyle": "default",
    "navigationBarTitleText": "unibest",
    "navigationBarBackgroundColor": "#f8f8f8",
    "navigationBarTextStyle": "black",
    "backgroundColor": "#FFFFFF"
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^fg-(.*)": "@/components/fg-$1/fg-$1.vue",
      "^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#018d71",
    "backgroundColor": "#F8F8F8",
    "borderStyle": "black",
    "height": "50px",
    "fontSize": "10px",
    "iconWidth": "24px",
    "spacing": "3px",
    "list": [
      {
        "iconPath": "/static/tabbar/home.png",
        "selectedIconPath": "/static/tabbar/home-active.png",
        "pagePath": "pages/home/index",
        "text": "首页"
      },
      {
        "iconPath": "/static/tabbar/search.png",
        "selectedIconPath": "/static/tabbar/search-active.png",
        "pagePath": "pages/search/index",
        "text": "搜索"
      },
      {
        "iconPath": "/static/tabbar/borrow.png",
        "selectedIconPath": "/static/tabbar/borrow-active.png",
        "pagePath": "pages/borrow/index",
        "text": "借阅"
      },
      {
        "iconPath": "/static/tabbar/profile.png",
        "selectedIconPath": "/static/tabbar/profile-active.png",
        "pagePath": "pages/profile/index",
        "text": "我的"
      }
    ]
  },
  "pages": [
    {
      "path": "pages/home/index",
      "type": "home",
      "layout": "tabbar",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/admin/index",
      "type": "page",
      "style": {
        "navigationBarTitleText": "后台管理"
      }
    },
    {
      "path": "pages/auth/index",
      "type": "page",
      "style": {
        "navigationBarTitleText": "登录/注册"
      }
    },
    {
      "path": "pages/book-detail/index",
      "type": "page",
      "style": {
        "navigationBarTitleText": "图书详情"
      }
    },
    {
      "path": "pages/borrow/index",
      "type": "page",
      "layout": "tabbar",
      "style": {
        "navigationBarTitleText": "借阅"
      }
    },
    {
      "path": "pages/favorites/index",
      "type": "page",
      "style": {
        "navigationBarTitleText": "我的收藏"
      }
    },
    {
      "path": "pages/feedback/index",
      "type": "page",
      "style": {
        "navigationBarTitleText": "意见反馈"
      }
    },
    {
      "path": "pages/profile/edit",
      "type": "page",
      "style": {
        "navigationBarTitleText": "编辑个人信息"
      }
    },
    {
      "path": "pages/profile/index",
      "type": "page",
      "layout": "tabbar",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
      "path": "pages/search/index",
      "type": "page",
      "style": {
        "navigationBarTitleText": "搜索"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages-sub",
      "pages": [
        {
          "path": "demo/index",
          "type": "page",
          "style": {
            "navigationStyle": "default",
            "navigationBarTitleText": "分包页面 标题"
          }
        },
        {
          "path": "page-admin/book-edit",
          "type": "page",
          "style": {
            "navigationBarTitleText": "图书编辑"
          }
        },
        {
          "path": "page-admin/book-manage",
          "type": "page",
          "style": {
            "navigationBarTitleText": "图书管理"
          }
        },
        {
          "path": "page-admin/statistics",
          "type": "page",
          "style": {
            "navigationBarTitleText": "统计分析"
          }
        }
      ]
    }
  ]
}
